<?xml version="1.0" encoding="utf-8" ?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <bean id="complexIndexer" class="org.openengsb.similarity.standard.internal.ComplexIndexer">
    <property name="edbService" ref="edbService" />
  </bean>

  <bean id="standardIndexer" class="org.openengsb.similarity.standard.internal.StandardIndexer">
    <property name="edbService" ref="edbService" />
  </bean>

   <service id="standardIndexer"  interface="org.openengsb.similarity.standard.Indexer">
      <bean class="org.openengsb.similarity.standard.internal.StandardIndexer" />
   </service>

   <service id="complexIndexer"  interface="org.openengsb.similarity.standard.Indexer">
      <bean class="org.openengsb.similarity.standard.internal.ComplexIndexer" />
   </service>
   
   <service id="standardSearcher"  interface="org.openengsb.similarity.standard.Searcher">
      <bean class="org.openengsb.similarity.standard.internal.StandardSearcher" />
   </service>

   <service id="complexSearcher"  interface="org.openengsb.similarity.standard.Searcher">
      <bean class="org.openengsb.similarity.standard.internal.ComplexSearcher" />
   </service>


  <reference id="edbService" interface="org.openengsb.core.api.edb.EngineeringDatabaseService" />
  
</blueprint>
